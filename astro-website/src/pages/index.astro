---
import Sheet from '../layouts/Sheet.astro';
import SheetCell from '../components/SheetCell.astro'; 

// info for about
const aboutMe = {
    firstName: "Charlotte", 
    grade: "11th", 
    hobbies: ["coding", "running", "reading", "organization!"], 
    careers: ["software engineering", "ai engineering"]
}

const experience = {
    high: ["HTML, CSS", "Python", "Flask"], 
    medium: ["Godot", "React", "Javascript"], 
    exploring: ["Pytorch", "Astro", "Svelte"]
}

// cell data
const cells = [
    [["Hello!"]], [["Welcome to my google sheets-inspired personal website!"], [], [], []], [[], [], [], []], [[], [], [], []], [[], [], [], []]
]
---
<Sheet>
    <!--iterates thru every row -->
    <style>
    </style>
    {cells.map((row) => (
        <div class="row" style={`display: grid; grid-template-columns: repeat(${row.length}, 1fr); `}>
            {row.map((cell) => (
                <SheetCell content={cell}></SheetCell>
            ))}
        </div>
    ))}
</Sheet>
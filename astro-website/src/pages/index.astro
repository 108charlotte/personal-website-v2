---
import Sheet from '../layouts/Sheet.astro';
import SheetCell from '../components/SheetCell.astro'; 

// info for about
const aboutMe = {
    firstName: "Charlotte", 
    grade: "11th", 
    hobbies: [["coding"], ["running"], ["organization!"]], 
    careers: [["software engineering"], ["ai engineering"]]
}

const experience = {
    high: [["HTML"], ["CSS"], ["Python"], ["Flask"]], 
    medium: [["Godot"], ["React"], ["Javascript"]], 
    exploring: [["Pytorch"], ["Astro"], ["Svelte"]]
}

// cell data
const cells = [
    [
        {content: "Hello! Welcome to my excel/google sheets-inspired website. ", 
        styleNotes:"center"}
    ], 
    [
        {content: "Name", styleNotes: "label"}, 
        {content: aboutMe.firstName}, 
        [], 
        []
    ], 
    [
        {content: "Grade", styleNotes: "label"}, 
        [{content: aboutMe.grade}], 
        [], 
        []
    ], 
    [
        {content: "Hobbies", styleNotes: "label"}, ...aboutMe.hobbies
    ], 
    [
        {content: "Careers", styleNotes: "label"}, ...aboutMe.careers, 
        []
    ],
    [[]], 
    [{content: "Experience", styleNotes: "center"}], 
    [{content: "High", styleNotes: "label"}, ...experience.high], 
    [{content: "Medium", styleNotes: "label"}, ...experience.medium, []], 
    [{content: "Exploring", styleNotes: "label"}, ...experience.exploring, []]
]
---
<Sheet>
    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
    {cells.map((row) => (
        <div class="row" style={`display: grid; grid-template-columns: repeat(${row.length}, 1fr); font-family: Inter; font-size: 12px; `}>
            {row.map((cell) => {
                const content = cell.content !== undefined ? cell.content : cell; 
                const styleNotes = cell.styleNotes !== undefined ? cell.styleNotes : cell; 
                return <SheetCell content={content} styleNotes={styleNotes}></SheetCell>
            })}
        </div>
    ))}
</Sheet>
---
const {activePage} = Astro.props; 
const pages = [
  {name: 'About', href: '/'},
  {name: 'Big Projects', href: '/big-projects'},
  {name: 'Little Projects', href: '/little-projects'}, 
  {name: 'Journey', href: '/journey'},
  {name: 'Stats', href: '/stats'},
  {name: 'Contact', href: '/contact'},
];
---

<div id="container">
    <style>
        ul {
            padding: 0px; 
            display: grid; 
            grid-auto-flow: column; 
            list-style-type: none; 
            margin: 0px; 
            text-align: center; 
        }

        li {
            background-color: rgb(223, 223, 223); 
            padding: 0.75rem; 
            font-size: 0.8rem; 
        }

        div {
            background-color: rgb(223, 223, 223); 
        }

        a {
            color: rgb(50, 50, 50); 
            text-decoration: none; 
        }

        #active {
            background-color: rgb(220, 201, 251); 
        }

        #active a {
            color: rgb(111, 5, 164); 
        }

        /* makes mobile-friendly */
        .navbar-scrollable {
            display: flex;
            overflow-x: auto; 
            white-space: nowrap; 
        }
    </style>
    <ul class="navbar-scrollable">
        <li style="background-color: rgb(200, 200, 200); border: solid rgb(200, 200, 200) 1px;">&nbsp;&nbsp;&nbsp;</li>
        {pages.map(page => (
            <li id={activePage === page.name ? 'active' : undefined}>
                <a href={page.href}>{page.name}</a>
            </li>
        ))}
    </ul>
</div>